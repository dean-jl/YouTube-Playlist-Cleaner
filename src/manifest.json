{
  "manifest_version": 3,
  "name": "YouTube Playlist Cleaner",
  "version": "1.1.0",
  "description": "Selectively remove items from your YouTube playlists.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab",
    "webNavigation",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
