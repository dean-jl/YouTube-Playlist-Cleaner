{
  "manifest_version": 3,
  "name": "YouTube Playlist Cleaner",
  "version": "1.0.2",
  "description": "Selectively remove items from your YouTube playlists.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/playlist?list=*"],
      "js": ["content.js"]
    }
  ]
}
