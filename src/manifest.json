{
  "manifest_version": 3,
  "name": "YouTube Playlist Trimmer",
  "version": "1.0.1",
  "description": "A browser extension to selectively delete items from your YouTube playlists.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/playlist?list=*"],
      "js": ["content.js"]
    }
  ]
}
